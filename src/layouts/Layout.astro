---
import "../styles/global.css";
import Head from "./Head.astro";
import Body from "./Body.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import type { Links } from "../components/Navbar.astro";

interface Props {
    page?: keyof typeof Links;
}

const { page } = Astro.props;
---

<Head>
    <title>aldenasf</title>
    <meta property="og:title" content="aldenasf" />
    <meta property="og:description" content="small programmer who likes doing web stuff :3" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://aldenasf.github.io/" />
    <meta content="#ff6467" data-react-helmet="true" name="theme-color" />
    <meta content="https://avatars.githubusercontent.com/u/63831735?v=4" name="og:image" />
    <link rel="icon" href="https://avatars.githubusercontent.com/u/63831735?v=4" />
</Head>
<Body>
    <header>
        <Navbar {page} />
    </header>

    <main>
        <slot />
    </main>

    <Footer />
</Body>
